@page "/"
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.JSInterop
@inject NavigationManager _nav

<PageTitle>Home</PageTitle>

<h1>Welcome to itssoover Mind Games</h1>

    <AuthorizeView>
        <NotAuthorized>
            <div style="margin-bottom: 100px;"> <!-- Pridedame papildomą tarpo elementą -->
                <LoginForm />
            </div>
        </NotAuthorized>
    </AuthorizeView>

    <div style="display: grid; gap: 10px; width: 45vh; margin: 0 auto; height: 45vh; position: relative;">
            <button class="pageButton" @onclick="@(()=>_nav.NavigateTo("/Leaderboard"))">
                Leaderboard
            </button>
            <button class="pageButton" @onclick="@(()=>_nav.NavigateTo("/VisualMemory"))">
                VisualMemory
            </button>
            <button class="pageButton" @onclick="@(()=>_nav.NavigateTo("/simonsays"))">
                SimonSays
            </button>
            <button class="pageButton" @onclick="@(()=>_nav.NavigateTo("/VerbalMemory"))">
                VerbalMemory
            </button>
        </div>
        



@code {
    [Inject]
    protected IJSRuntime JSRuntime { get; set; }

    protected override void OnAfterRender(bool firstRender) {
        if(firstRender)
            JSRuntime.InvokeVoidAsync("onBlazorReadyLog");
    }
}    

