@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager _nav
@inherits LayoutComponentBase

<div class="page body">

    <main>
        <div class="top-row px-4 flex-container darker-grey-bg">
            
            <div>
                <button class="pageButton" @onclick="@(()=>_nav.NavigateTo(""))">
                    Home
                </button>
                <button class="pageButton" @onclick="@(()=>_nav.NavigateTo("/Leaderboard"))">
                    Leaderboard
                </button>
            </div>
            
            <h3>itssoover Games</h3>
            <div class="flex-right">
                <AuthorizeView>
                    <Authorized>
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @context.User.Identity?.Name!</a>
                        <LogoutButton />
                    </Authorized>
                    <NotAuthorized>
                        You are not logged in
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
