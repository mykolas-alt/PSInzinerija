@using PSInzinerija1.Games.VisualMemory
@page "/VisualMemory"

<PageTitle>VisualMemory</PageTitle>

<h1 >VisualMemory <span style="float: right;">Score: @Manager.Score</span></h1>

<div style="display: grid; height: 75vmin; grid-gap: 1%; grid-template-rows: repeat(@Manager.Sequence.GridSize, 1fr); grid-template-columns: repeat(@Manager.Sequence.GridSize, 1fr);">
    @foreach (var button in Manager.Sequence) {
        string buttonClass = button.Pressed 
        ? button.Value == SequenceValue.Valid ? "pressed-valid" : "pressed-invalid"
        : "not-pressed";
        <button class="button @buttonClass" disabled="@button.Pressed" @onclick="async () => await Manager.HandleInput(button)"/>
    }
</div>