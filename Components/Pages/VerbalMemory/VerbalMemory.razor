@page "/VerbalMemory"

@using PSInzinerija1.Games.VerbalMemory

<PageTitle>VerbalMemory</PageTitle>

<h2>High Score: @Manager.HighScore</h2>
<h2>Current Score: @Manager.Score</h2>

<div class="game-container">
    <div class="word-display">
        @Manager.CurrentWord
    </div>

    <div class="buttons">
        <button class="game-button" @onclick="() => Manager.HandleButtonClick(true)">Seen</button>
        <button class="game-button" @onclick="() => Manager.HandleButtonClick(false)">New</button>
    </div>

    <div class="mistake-counter">
        <p>Mistakes: @Manager.MistakeCount</p>
    </div>
</div>
