@page "/SimonSays"

<PageTitle>SimonSays</PageTitle>

<h1>SimonSays</h1>



    <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; width: 300px; margin: 0 auto">
    @foreach (var button in buttons)  
    {  
        
        
            <button style="background-color:@button.Color; padding:@button.Padding; border:@button.Border; display:@button.Display; font-size:@button.FontSize; " @onclick="button.OnClick">@button.Text</button>  
        
    } 
    </div>


@code {
     class Button {  
        public string Color { get; set; } = "white";  
        public string Text { get; set; }  
        public string Border {get; set;} = "2px solid #000000";
        public string Padding {get; set;} = "15px 32px";
        public string Display {get; set;} = "inline-block";
        public string FontSize {get; set;} = "16px";

        public Button(string buttonText) {  
            Text = buttonText;  
        }  

        public async Task OnClick() {  
            Color = "blue";  
            await Task.Delay(50);  
            Color = "white";  
        }  
    }

    List<Button> buttons = Enumerable.Range(1, 9)  
        .Select(index => new Button(index.ToString()))  
        .ToList();
}
